{
  "name": "ng-alain",
  "version": "20.1.1",
  "description": "ng-zorro-antd admin panel front-end framework",
  "author": "cipchk <cipchk@qq.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ng-alain/ng-alain.git"
  },
  "bugs": {
    "url": "https://github.com/ng-alain/ng-alain/issues"
  },
  "homepage": "https://ng-alain.com",
  "license": "MIT",
  "keywords": [
    "delon",
    "antd",
    "ng-zorro-antd",
    "angular",
    "component",
    "scaffold"
  ],
  "scripts": {
    "ng-high-memory": "node --max_old_space_size=8000 ./node_modules/@angular/cli/bin/ng",
    "ng": "ng",
    "start": "cd packages/ui-angular && ng s -o",
    "hmr": "cd packages/ui-angular && ng s -o --hmr",
    "build": "cd packages/ui-angular && npm run ng-high-memory build",
    "analyze": "cd packages/ui-angular && npm run ng-high-memory build -- --source-map",
    "analyze:view": "source-map-explorer dist/**/*.js",
    "lint": "npm run lint:ts && npm run lint:style",
    "lint:ts": "npx eslint --cache --fix",
    "lint:style": "npx stylelint 'packages/ui-angular/src/**/*.less'",
    "e2e": "cd packages/ui-angular && ng e2e",
    "test": "cd packages/ui-angular && ng test --watch",
    "test-coverage": "cd packages/ui-angular && ng test --code-coverage --watch=false",
    "color-less": "ng-alain-plugin-theme -t=colorLess",
    "theme": "ng-alain-plugin-theme -t=themeCss",
    "icon": "ng g ng-alain:plugin icon",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@angular-eslint/builder": "^20.3.0",
    "@angular/build": "^20.3.1",
    "@angular/cli": "^20.3.1",
    "@angular/compiler-cli": "^20.3.0",
    "@delon/testing": "^20.1.1",
    "@eslint/js": "^9.35.0",
    "@ng-util/monaco-editor": "^20.1.0",
    "@types/jasmine": "~5.1.0",
    "@types/jasminewd2": "~2.0.13",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "@typescript-eslint/utils": "^8.44.0",
    "angular-eslint": "^20.3.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "~2.32.0",
    "eslint-plugin-jsdoc": "~61.1.4",
    "eslint-plugin-prefer-arrow": "~1.2.3",
    "eslint-plugin-prettier": "~5.5.4",
    "eslint-plugin-unused-imports": "^4.2.0",
    "husky": "^9.1.7",
    "jasmine-core": "~5.9.0",
    "jasmine-spec-reporter": "^7.0.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "lint-staged": "^16.1.6",
    "ng-alain": "^20.1.1",
    "ng-alain-plugin-theme": "^18.0.0",
    "ngx-tinymce": "^20.0.0",
    "prettier": "^3.6.2",
    "protractor": "~7.0.0",
    "source-map-explorer": "^2.5.3",
    "stylelint": "^16.24.0",
    "stylelint-config-clean-order": "^7.0.0",
    "stylelint-config-standard": "^39.0.0",
    "stylelint-declaration-block-no-ignored-properties": "^2.8.0",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.44.0"
  },
  "lint-staged": {
    "(packages/ui-angular/src)/**/*.{html,ts}": [
      "eslint --cache"
    ],
    "(packages/ui-angular/src)/**/*.less": [
      "npm run lint:style"
    ]
  },
  "packageManager": "yarn@4.9.2",
  "private": true,
  "workspaces": [
    "packages/*"
  ]
}
